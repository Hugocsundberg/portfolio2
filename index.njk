---
layout: layouts/base.njk
---

    {% set textGradientOnHover = "transition bg-gradientDark bg-clip-text hover:text-transparent animate-gradient-fast" %}

<div id="scroll-container" class="px-small md:px-medium lg:px-large box-border xs:snap-proximity xs:snap-y w-screen h-screen overflow-y-auto">
    <nav class="pt-small md:pt-medium snap-center lg:pt-large box-border h-screen relative">
        <p id="top" class="animate-in text-3xl mb-4 font-light">Hugo Sundberg</p>
        <h1 class="animate-in text-7xl font-bold mb-36 md:text-8xl">Portfolio.</h1>
        <ul>
            <li class="animate-in mb-4"><a class="{{textGradientOnHover}} text-3xl font-bold" data-en="Projects" href="">Projekt</a></li>
            <li class="animate-in mb-4"><a class="{{textGradientOnHover}} text-3xl font-bold" data-en="About me" href="">Om mig</a></li>
        </ul>
        <a class="{{textGradientOnHover}} underline animate-in absolute bottom-8" data-en="Switch to swedish" href="">Byt till engelska</a>
    </nav>
    {% set imageBaseStyle = "object-cover image lg:h-[58vh] h-[30vh] xs:h-[48vh] w-full max-w-[1024px]" %}
    {% set textCardBaseStyle = "translate-y-[200px] backdrop-blur-lg shadow-card bg-white/80 relative p-card-small md:p-card-medium lg:p-card-large -mt-small md:-mt-medium lg:-mt-large w-full max-w-[460px] rounded-card-medium bg-white shall-animate" %}
    {% for project in projects %}
    {% set imageSrc = project.images[0].path %}
    <section class="relative h-screen snap-start w-full flex items-center">
        <div class="w-full">
            {% if loop.index % 2 == 0 %}
        {# Image to right #}
                <div class="relative ml-small md:ml-medium lg:ml-large right-0 w-full">
                    <img class="{{imageBaseStyle}} ml-auto rounded-image-medium-right" src="{{imageSrc}}" alt="">
                </div>
                <div class="{{textCardBaseStyle}} ml-auto">
            {% else %} 
        {# Image to left #}
                 <div class="relative -ml-small md:-ml-medium lg:-ml-large left-0 w-full">
                    <img class="{{imageBaseStyle}} rounded-image-medium" src="{{imageSrc}}" alt="">
                </div>
                <div class="{{textCardBaseStyle}}">
            {% endif %}
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aut pariatur molestiae doloremque amet quidem sequi quo. Autem omnis, perferendis nostrum at doloremque similique! Optio nemo explicabo laboriosam commodi tempore quis?</p>
            </div>
        </div>
    </section>
    {% endfor %}
</div>